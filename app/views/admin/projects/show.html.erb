<% content_for :content_header do %>
    <section class="content-header">
      <h1>Show
        <small>admin_project</small>
      </h1>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><%= link_to "Admin_projects", admin_projects_path %></li>
        <li class="active">Show</li>
      </ol>
    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header">
          <div class="box-tools pull-right">
            <%= link_to edit_admin_project_path(@admin_project), :class => 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-pencil"></span>
                Edit Project
            <% end %>
            <%= link_to  admin_project_path(@admin_project), method: :delete, data: {confirm: 'Are you sure?'} do %>
                <span class="glyphicon glyphicon-trash"></span>
                Delete Project
            <% end %>

          </div>
        </div>
        <div class="box-body">
          <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd><%= @admin_project.name %></dd>
            <dt>Description</dt>
            <dd><%= @admin_project.description %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
</section>

