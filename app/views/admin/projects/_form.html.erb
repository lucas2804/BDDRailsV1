<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= simple_form_for([:admin, @admin_project], :html => {:role => "form"}) do |f| %>
          <%= render partial: "layouts/error_message", :locals => {object: @admin_project} %>
          <%= f.input :name, input_html: {class: "form-control"} %>
          <%= f.input :description, input_html: {class: "form-control"} %>
          <%= f.submit :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section> 