<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for([:admin, @admin_project], :html => {:role => "form"}) do |f| %>
          <%= render partial: "layouts/error_message", :locals => {object: @admin_project} %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_field :description, :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>
</section> 