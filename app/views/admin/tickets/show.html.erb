<% content_for :content_header do %>
    <section class="content-header">
      <h1>Show
        <small>Ticket</small>
      </h1>
      <ul class="actions">
        <li><%= link_to "Edit Ticket", edit_admin_project_ticket_path(@project, @ticket),
                        class: "pull-right btn btn-primary" %></li>
        <li><%= link_to "Delete Ticket", admin_project_ticket_path(@project, @ticket), method: :delete,
                        class: "pull-right btn btn-primary" %></li>
      </ul>
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><%= link_to "Tickets", admin_project_tickets_path %></li>
        <li class="active">Show</li>
      </ol>


    </section>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-body">
          <div id="ticket">
            <h2><%= @project.name %> </h2>
            <dl class="dl-horizontal">
              <dt>Name:</dt>
              <dd><%= @ticket.name %></dd>

              <dt>Description:</dt>
              <dd><%= simple_format(@ticket.description) %></dd>

              <dt>Project:</dt>
              <dd><%= @project.name %></dd>

            </dl>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>

