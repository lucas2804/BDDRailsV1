<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= simple_form_for([:admin, @project, @ticket]) do |f| %>
          <%= render partial: "layouts/error_message", :locals => {object: @ticket} %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.association :project %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
      <% end %>
    </div>
  </div>
</section>